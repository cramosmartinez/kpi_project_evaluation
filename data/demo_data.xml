            <field name="state">completed</field>
            <field name="priority">high</field>
            <field name="risk">medium</field>
            <field name="start_date">2024-01-15</field>
            <field name="end_date">2024-01-30</field>
            <field name="progress">100</field>
            <field name="cost">2500.00</field>
        </record>

        <record id="demo_task_development" model="kpi.task">
            <field name="name">Desarrollo de Módulos Personalizados</field>
            <field name="project_id" ref="demo_project_erp"/>
