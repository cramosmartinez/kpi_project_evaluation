<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">
        <!-- Template de email para alertas -->
        <record id="email_template_kpi_alert" model="mail.template">
            <field name="name">KPI Alert Notification</field>
            <field name="model_id" ref="model_kpi_alert"/>
            <field name="email_from">${object.create_uid.email|safe}</field>
            <field name="email_to">${object.project_id.manager_id.email|safe}</field>
            <field name="subject">Alerta KPI: ${object.name}</field>
            <field name="body_html"><![CDATA[
<div style="font-family: Arial, sans-serif; max-width: 600px; margin: 0 auto;">
    <h2 style="color: #ff6b6b;">⚠️ Alerta del Sistema KPI</h2>

    <p><strong>Proyecto:</strong> ${object.project_id.name or 'N/A'}</p>
    <p><strong>Tipo de Alerta:</strong> ${object.alert_type}</p>
    <p><strong>Severidad:</strong> ${object.severity}</p>
    <p><strong>Fecha:</strong> ${object.date_triggered}</p>

    <div style="background: #f8f9fa; padding: 15px; border-radius: 5px; margin: 15px 0;">
        <strong>Mensaje:</strong><br/>
        ${object.message or 'Sin mensaje adicional'}
    </div>

    <p>Por favor, revise esta alerta en el sistema KPI Manager Pro.</p>

    <div style="margin-top: 20px; padding-top: 15px; border-top: 1px solid #eee;">
        <small>Este es un mensaje automático del Sistema de Gestión de KPIs</small>
    </div>
</div>
            ]]></field>
        </record>
    </data>
</odoo>