<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">
        <!-- Grupos de seguridad -->
        <record id="group_kpi_user" model="res.groups">
            <field name="name">Usuario KPI</field>
            <field name="category_id" ref="base.module_category_project_management"/>
        </record>

        <record id="group_kpi_manager" model="res.groups">
            <field name="name">Gerente KPI</field>
            <field name="category_id" ref="base.module_category_project_management"/>
            <field name="implied_ids" eval="[(4, ref('group_kpi_user'))]"/>
        </record>

        <!-- Reglas de acceso -->
        <record id="access_kpi_project_user" model="ir.model.access">
            <field name="name">kpi.project.user</field>
            <field name="model_id" ref="model_kpi_project"/>
            <field name="group_id" ref="group_kpi_user"/>
            <field name="perm_read">1</field>
            <field name="perm_write">1</field>
            <field name="perm_create">1</field>
            <field name="perm_unlink">0</field>
        </record>

        <record id="access_kpi_project_manager" model="ir.model.access">
            <field name="name">kpi.project.manager</field>
            <field name="model_id" ref="model_kpi_project"/>
            <field name="group_id" ref="group_kpi_manager"/>
            <field name="perm_read">1</field>
            <field name="perm_write">1</field>
            <field name="perm_create">1</field>
            <field name="perm_unlink">1</field>
        </record>

        <record id="access_kpi_task_user" model="ir.model.access">
            <field name="name">kpi.task.user</field>
            <field name="model_id" ref="model_kpi_task"/>
            <field name="group_id" ref="group_kpi_user"/>
            <field name="perm_read">1</field>
            <field name="perm_write">1</field>
            <field name="perm_create">1</field>
            <field name="perm_unlink">0</field>
        </record>

        <record id="access_kpi_dashboard_user" model="ir.model.access">
            <field name="name">kpi.dashboard.user</field>
            <field name="model_id" ref="model_kpi_dashboard"/>
            <field name="group_id" ref="group_kpi_user"/>
            <field name="perm_read">1</field>
            <field name="perm_write">0</field>
            <field name="perm_create">0</field>
            <field name="perm_unlink">0</field>
        </record>

        <record id="access_kpi_alert_user" model="ir.model.access">
            <field name="name">kpi.alert.user</field>
            <field name="model_id" ref="model_kpi_alert"/>
            <field name="group_id" ref="group_kpi_user"/>
            <field name="perm_read">1</field>
            <field name="perm_write">1</field>
            <field name="perm_create">0</field>
            <field name="perm_unlink">0</field>
        </record>
    </data>
</odoo>