<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="view_kpi_export_wizard_form" model="ir.ui.view">
            <field name="name">kpi.export.wizard.form</field>
            <field name="model">kpi.export.wizard</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group>
                            <group>
                                <field name="export_format"/>
                            </group>
                            <group>
                                <field name="include_tasks"/>
                                <field name="include_metrics"/>
                            </group>
                        </group>
                        <footer>
                            <button name="action_export" string="Exportar" type="object" class="btn-primary"/>
                            <button string="Cancelar" class="btn-secondary" special="cancel"/>
                        </footer>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="action_kpi_export_wizard" model="ir.actions.act_window">
            <field name="name">Exportar KPIs</field>
            <field name="res_model">kpi.export.wizard</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
        </record>
    </data>
</odoo>