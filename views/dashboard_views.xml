<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Vista del Dashboard -->
        <record id="view_kpi_dashboard_form" model="ir.ui.view">
            <field name="name">kpi.dashboard.form</field>
            <field name="model">kpi.dashboard</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <div class="kpi-dashboard">
                            <h2>Dashboard de KPIs - Vista General</h2>

                            <!-- Métricas principales -->
                            <div class="row">
                                <div class="col-md-3">
                                    <div class="kpi-card text-center">
                                        <div class="kpi-metric">
                                            <div class="value"><field name="total_projects"/></div>
                                            <div class="label">Total Proyectos</div>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-3">
                                    <div class="kpi-card text-center">
                                        <div class="kpi-metric">
                                            <div class="value"><field name="active_projects"/></div>
                                            <div class="label">Proyectos Activos</div>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-3">
                                    <div class="kpi-card text-center">
                                        <div class="kpi-metric">
                                            <div class="value"><field name="completed_projects"/></div>
                                            <div class="label">Proyectos Completados</div>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-3">
                                    <div class="kpi-card text-center">
                                        <div class="kpi-metric">
                                            <div class="value"><field name="total_tasks"/></div>
                                            <div class="label">Total Tareas</div>
                                        </div>
                                    </div>
                                </div>
                            </div>

                            <!-- Segunda fila de métricas -->
                            <div class="row mt-4">
                                <div class="col-md-4">
                                    <div class="kpi-card text-center">
                                        <div class="kpi-metric">
                                            <div class="value"><field name="completed_tasks"/></div>
                                            <div class="label">Tareas Completadas</div>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-4">
                                    <div class="kpi-card text-center">
                                        <div class="kpi-metric">
                                            <div class="value"><field name="overdue_tasks"/></div>
                                            <div class="label">Tareas Atrasadas</div>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-4">
                                    <div class="kpi-card text-center">
                                        <div class="kpi-metric">
                                            <div class="value">0%</div>
                                            <div class="label">Tasa de Completado</div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="action_kpi_dashboard" model="ir.actions.act_window">
            <field name="name">Dashboard KPI</field>
            <field name="res_model">kpi.dashboard</field>
            <field name="view_mode">form</field>
            <field name="view_id" ref="view_kpi_dashboard_form"/>
            <field name="target">current</field>
        </record>

        <menuitem id="menu_kpi_dashboard" name="Dashboard" parent="menu_kpi_main" action="action_kpi_dashboard" sequence="5"/>
    </data>
</odoo>